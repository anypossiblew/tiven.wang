<core:View xmlns:core="sap.ui.core"
		   xmlns="sap.uxap"
		   xmlns:layout="sap.ui.layout"
		   xmlns:m="sap.m"
		   xmlns:leaflet="sap.leaflet"
		   xmlns:d3="sap.d3"
		   xmlns:goals="sap.uxap.sample.SharedBlocks.goals"
		   xmlns:personal="sap.uxap.sample.SharedBlocks.personal"
		   xmlns:employment="sap.uxap.sample.SharedBlocks.employment"
		   controllerName="sap.uxap.sample.AnchorBarWithNumbers.AnchorBarWithNumbers"
		   height="100%"
		>

	<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" subSectionLayout="TitleOnLeft"
					  showTitleInHeaderContent="true" showHeaderContent="true">
		<headerTitle>
			<ObjectPageHeader objectImageURI="/images/tiven.jpg"
							  objectImageShape="Circle"
							  objectTitle="{i18n>userName}"
							  objectSubtitle="{i18n>userSubTitle}"
							  objectImageAlt="{i18n>userSubTitle}"
							  id="ObjectPageLayoutHeaderTitle"
							  isObjectIconAlwaysVisible="false"
							  isObjectTitleAlwaysVisible="false"
							  isObjectSubtitleAlwaysVisible="false"
							  isActionAreaAlwaysVisible="true"
							  showPlaceholder="true">
				<actions>
					<m:Link class="sapUiSmallMargin" text="{i18n>profileLanguage}" href="?sap-language={i18n>profileLanguageCode}"/>
					<ObjectPageHeaderActionButton icon="sap-icon://pull-down" text="show section" type="Emphasized" press="onPressPrint"/>
					<ObjectPageHeaderActionButton icon="sap-icon://add-favorite" text="{i18n>addBookmark}" type="Emphasized" press="onPressBookmark"/>
				</actions>
			</ObjectPageHeader>
		</headerTitle>

		<headerContent>
			<layout:VerticalLayout>
				<m:Link text="{i18n>userMobilePhone}" href="tel:{i18n>userMobilePhone}"/>
				<m:Link text="{i18n>userEmail}" href="mailto:{i18n>userEmail}"/>
				<layout:HorizontalLayout>
					<m:Image height="24px" width="24px" src="./resources/sap/uxap/images/linkedInIcon.png"></m:Image>
					<m:Image height="24px" width="24px" src="./resources/sap/uxap/images/twitterIcon.png"></m:Image>
				</layout:HorizontalLayout>
			</layout:VerticalLayout>

			<layout:VerticalLayout>
				<m:Label text="I am HANA developer and ABAPer and Fiori developer."/>
				<m:VBox height="63px">
					<m:Label text="Achieved goals"/>
					<m:ProgressIndicator
							percentValue="90"
							displayValue="90%"
							showValue="true"
							state="None"/>
				</m:VBox>
			</layout:VerticalLayout>

			<layout:VerticalLayout>
				<m:Label text="Shanghai, China"/>
			</layout:VerticalLayout>

			<layout:VerticalLayout>
				<m:ObjectStatus title="{i18n>userStatusLabel}" text="Available" state="Success"/>
			</layout:VerticalLayout>
		</headerContent>

		<sections>
			<ObjectPageSection title="2015-2016 {i18n>sapLabs}">
				<subSections>
					<ObjectPageSubSection title="Hybris Marketing Localization">
						<blocks>
							<goals:GoalsBlock id="goalsblock"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="2012-2015 {i18n>accenture} (8)">
				<subSections>
					<ObjectPageSubSection title="{i18n>SGCCHubei}">
						<personal:BlockAdresses id="adresses"/>
						<personal:BlockPhoneNumber id="phone"/>
						<personal:BlockSocial id="social"/>
						<personal:BlockMailing id="mailing"/>
					</ObjectPageSubSection>

					<ObjectPageSubSection title="{i18n>Sinopec}">
						<blocks>
							<personal:PersonalBlockPart1 id="part1"/>
						</blocks>
						<moreBlocks>
							<personal:PersonalBlockPart2 id="part2"/>
						</moreBlocks>
					</ObjectPageSubSection>
					
					<ObjectPageSubSection title="{i18n>PacificTextiles}" mode="Collapsed">
						<blocks>
							<employment:EmploymentBlockJob id="employmentblockjob" showSubSectionMore="true">
								<employment:mappings>
									<ModelMapping externalModelName="ObjectPageModel" internalModelName="emp1"
												  externalPath="/Employee/0"/>
									<ModelMapping externalModelName="ObjectPageModel" internalModelName="emp2"
												  externalPath="/Employee/1"/>
									<ModelMapping externalModelName="ObjectPageModel" internalModelName="emp3"
												  externalPath="/Employee/2"/>
									<ModelMapping externalModelName="ObjectPageModel" internalModelName="emp4"
												  externalPath="/Employee/3"/>
									<ModelMapping externalModelName="ObjectPageModel" internalModelName="emp5"
												  externalPath="/Employee/4"/>
									<ModelMapping externalModelName="ObjectPageModel" internalModelName="emp6"
												  externalPath="/Employee/5"/>
								</employment:mappings>
							</employment:EmploymentBlockJob>
						</blocks>
					</ObjectPageSubSection>
					<ObjectPageSubSection title="{i18n>YunnanCopper}" >
						<blocks>
							<personal:PersonalBlockPart1 />
						</blocks>
					</ObjectPageSubSection>
					<ObjectPageSubSection title="{i18n>ShenhuaGroup}">
						<blocks>
							<personal:PersonalBlockPart1 />
						</blocks>
					</ObjectPageSubSection>
					<ObjectPageSubSection title="{i18n>AlcatelSbell}">
						<blocks>
							<personal:PersonalBlockPart1 />
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="2011 {i18n>ibm} (2)">
				<subSections>
					<ObjectPageSubSection title="{i18n>GeneralMotors}">
						<blocks>
							<employment:BlockJobInfoPart1 id="jobinfopart1"/>
							<employment:BlockJobInfoPart2 id="jobinfopart2"/>
							<employment:BlockJobInfoPart3 id="jobinfopart3"/>
						</blocks>
					</ObjectPageSubSection>

					<ObjectPageSubSection title="{i18n>BeijingEnergy}" mode="Collapsed">
						<blocks>
							<employment:BlockEmpDetailPart1 id="empdetailpart1" columnLayout="1"/>
						</blocks>
						<moreBlocks>
							<employment:BlockEmpDetailPart2 id="empdetailpart2" columnLayout="1"/>
							<employment:BlockEmpDetailPart3 id="empdetailpart3" columnLayout="1"/>
						</moreBlocks>
					</ObjectPageSubSection>

					
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="{i18n>skills}">
				<subSections>
					<ObjectPageSubSection title="{i18n>mySkills}">
						<blocks>
							<d3:BilevelPartition partitionData="{partition>/}" height="500px"></d3:BilevelPartition>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			
			<ObjectPageSection title="{i18n>locations}">
				<subSections>
					<ObjectPageSubSection title="{i18n>myLocations}">
						<blocks>
							<leaflet:LGeoMap crs="BEPSG3857" centerLat="31.207391" centerLng="121.608203" zoom="16"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</core:View>
